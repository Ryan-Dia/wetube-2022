extends base.pug

block content 
    if errorMessage
        span=errorMessage
    div.form-style
        span Login 
        form.form-style__form(method="POST")
            input(name="username" ,placeholder="username", type="text", required)
            if userErrorMessage
                span=userErrorMessage
            input(name="password",placeholder="password",  type="password", required)
            if passwordErrorMessage
                span=passwordErrorMessage
            input(type="submit", value="Login")
            br
            a(href="/users/github/start") Continew with Github &rarr;
        
    hr
    div     
        span Don't have an account?    
        a(href="/join")  Create one now &rarr;

